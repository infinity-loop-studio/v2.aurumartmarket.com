<div class="d-flex plr-15">
    <div style="width: 25%">
        <div class="box-shadow bg-white">
            <h1 class="bg-2 color-white p-15 m-0">Подобрать урок</h1>
        </div>
    </div>
    <div class="pl-15" style="width: 75%">
        <div class="d-flex">
            <div class="p-15 d-flex" style="width: 35%; min-height: 200px; box-shadow: 0px 1px 1px rgb(0 0 0 / 10%); background-color: white">
                <img src="/images/lessons/<%= lesson.systemName; %>/main.jpg" width="100%">
            </div>
            <div class="pl-15" style="width: 65%">
                <h1><%= lesson.name; %></h1>
                <h3>Стоимость</h3>
                <%= lesson.price; %>
                <% if (!inCart){ %>
                    <button class="buyButton" type="button">В корзину</button>
                <% } else { %>
                    <button class="inCart" type="button">Товар уже в корзине</button>
                <% } %>
                <input type="hidden" name="lesson" value="<%= lesson.id %>">
            </div>
        </div>
    </div>
</div>
